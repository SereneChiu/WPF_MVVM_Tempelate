<Page x:Class="ConfiguratorLibrary.View.Topology.Tpg_Main_Right_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ConfiguratorLibrary.View.Topology"
      xmlns:i="clr-namespace:ConfiguratorLibrary" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Tpg_Main_Right_Page">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Text="{Binding Message}" TextWrapping="Wrap" VerticalAlignment="Center" />
        <Button Content="Change Message" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,266,0,0"/>
    </Grid>
</Page>
